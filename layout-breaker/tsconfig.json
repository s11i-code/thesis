{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es2019", "dom"],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2019",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "noEmitHelpers": true,
  },

  "include": [
    "src/**/*"
  ],

  "exclude": ["node_modules"] 
}
